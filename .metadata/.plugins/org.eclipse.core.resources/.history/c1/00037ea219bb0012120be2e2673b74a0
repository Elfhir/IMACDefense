	public void readTextFile (BufferedInputStream input)
	{
		try {
			int counter = 0;
			byte buffer[] = new byte[8];
			int n = 0;
			while ((n = input.read(buffer)) >= 0)
			{
				for (byte i : buffer)
				{
					System.out.print((char)i);
				}
			}
			System.out.println(counter);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
