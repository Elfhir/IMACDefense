package map;

public enum Tile {
	
	Field ("", false, true, false, null),
	Mountain ("", true, false, false, null),
	Buttress ("", false, false, true, null);
	
	public static int width = 20;
	
	private String image = "";
	private boolean destroyable = false;
	private boolean walkable = true;
	private boolean constructible = false;
	private Zone zone = null;

	private Tile(String image, boolean destroyable, boolean walkable,
			boolean constructible, Zone zone) {
		this.image = image;
		this.destroyable = destroyable;
		this.walkable = walkable;
		this.constructible = constructible;
		this.zone = zone;
	}
	
	public void print ()
	{
		System.out.println(this);
		return;
	}

}
